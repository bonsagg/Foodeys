<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="test">
        <!-- If you are running in a production environment, add a managed
           data source, the example data source is just for proofs of concept! -->
        <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <properties>
            <!-- Bind entity manager factory to JNDI at java:jboss/foodeysTestEntityManagerFactory -->
            <property name="jboss.entity.manager.factory.jndi.name" value="java:jboss/foodeysTestEntityManagerFactory"/>
            <property name="jboss.entity.manager.jndi.name" value="java:/foodeysTestEntityManager"/>

            <!-- Drop and re-create the database schema on startup -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>


            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.transaction.flush_before_completion" value="true"/>
        </properties>
    </persistence-unit>
</persistence>